FROM alpine:3.22

RUN apk add --no-cache \
	php81 \
	php81-fpm \
	php81-mysqli \
	php81-json \
	php81-curl \
	php81-xml \
	wget \
	unzip

WORKDIR /var/www/html

RUN wget https://fr.wordpress.org/latest-fr_FR.zip && \
	 unzip latest-fr_FR.zip && \
	 mv wordpress/* . && \
	 rm -rf wordpress latest-fr_FR.zip

EXPOSE 9000

CMD [ "php-fpm81", "-F"]